%section.genre
  %header.clearfix
    %h1 #{@genre.name}
    .genre_sorting
      Sort by:
      %select(name="")
        %option(value="a-z") Title: A - Z
        %option(value="z-a") Title: Z - A
        %option(value="rating") Rating
  %article.row
    - @artists.each do |artist|
      .video.col-md-2
        = link_to image_tag(artist.small_cover_url), artist
