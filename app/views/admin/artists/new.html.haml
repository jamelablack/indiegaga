%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for([:admin, @artist], layout: :horizontal, label_col: "col-sm-2", control: "col-sm-6") do |f|
          %ul.nav.nav-tabs
            %li
              %a(href="/ui/admin_views_payments") Recent Payments
              %a(href="") Add Album
              %a(href="") Add Songs
            %li.active
              %a(href="") Add Artist
          %br
          %fieldset
            .col-md-10.col-md-offset-1
              = f.text_field :name, control_col: "col-sm-4"
              = f.select :genre_id, options_for_select(Genre.all.map {|genre| [genre.name, genre.id]})
              = f.text_area :bio, rows: 6
              = f.text_field :year_created
              = f.text_field :website
              = f.text_field :merchandise
              = f.text_field :video_url, class: "span3", label: "Featured Video URL"
              = f.file_field :small_cover, class: "btn-btn-file"
              = f.file_field :large_cover, class: "btn-btn-file"
            .col-sm-6.col-md-offset-3
              = f.submit "Add Artist"
